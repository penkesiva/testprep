<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/progress_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_8sp"
            android:layout_marginTop="@dimen/padding_8sp"
            android:layout_marginRight="@dimen/padding_8sp"
            android:background="@drawable/rectangle_blue"
            android:padding="@dimen/padding_5sp">

            <TextView
                android:id="@+id/tv_progress"
                style="@style/Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_8sp"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary3"/>

            <TextView
                android:id="@+id/timer"
                style="@style/Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_8sp"/>
        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/questions_sliding_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quiz_q_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quiz_q_title"
            style="@style/Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_small"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_large"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/quiz_q_subject"
            style="@style/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_small"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_large"/>

        <TextView
            android:id="@+id/quiz_q_time"
            style="@style/Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_large"/>

        <Button
            android:id="@+id/quiz_q_start"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_large"
            android:background="@drawable/rectangle_green"
            android:padding="@dimen/padding_small"
            android:text="start"/>

        <TextView
            android:id="@+id/quiz_q_counter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="100sp"
            android:visibility="invisible"/>
    </LinearLayout>

</FrameLayout>
