<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="@dimen/padding_2sp"
    android:paddingRight="16dp"
    android:paddingBottom="@dimen/padding_2sp">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tests_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <FrameLayout
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tests_list_counter_shadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="45sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tests_list_counter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="45sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="3"
                android:visibility="gone"/>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/quiz_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tests_item_title"
                    style="@style/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QuizName"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tests_item_title">

                    <TextView
                        android:id="@+id/tests_item_subject"
                        style="@style/Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="testsddfdf"/>

                    <TextView
                        android:id="@+id/tests_item_time"
                        style="@style/Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tests_item_subject"
                        android:layout_marginLeft="@dimen/padding_12sp"
                        android:text="1h:15m"/>
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/tests_item_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="50sp"
                android:maxHeight="50sp"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:scaleType="centerInside"
                android:src="@drawable/trophy"
                android:visibility="visible"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
