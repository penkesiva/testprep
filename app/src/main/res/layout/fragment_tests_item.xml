<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="@dimen/padding_2sp"
    android:paddingRight="16dp"
    android:paddingBottom="@dimen/padding_2sp">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tests_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_8sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5sp">

                <TextView
                    android:id="@+id/tests_item_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/big_font"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/tests_item_mark"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/right"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tests_item_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5sp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium2_font"/>

            <TextView
                android:id="@+id/tests_item_exam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5sp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium2_font"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tests_item_time_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5sp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium2_font"/>

            <TextView
                android:id="@+id/tests_item_time_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5sp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium2_font"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tests_item_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5sp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium2_font"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
