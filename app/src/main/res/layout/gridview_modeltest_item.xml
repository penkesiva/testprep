<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_blue"
    android:padding="5dp"
    android:gravity="center" >

    <TextView
        android:id="@+id/textview_modeltest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="ModelTest"
        android:maxLines="1"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textview_exam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:maxLines="1"
        tools:text="Civils"
        android:gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_5sp"
        android:layout_marginRight="@dimen/padding_5sp"
        android:layout_marginLeft="@dimen/padding_5sp" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/imageview_unlock"
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:src="@drawable/unlock"
                android:scaleType="fitXY"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/imageview_lock"
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:src="@drawable/lock"
                android:scaleType="fitXY"
                android:visibility="invisible"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:src="@drawable/right"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>