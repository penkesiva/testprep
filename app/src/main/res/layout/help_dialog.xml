<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/colorOrangeLight">

    <FrameLayout
        android:id="@+id/help_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/help_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorOrange"
            android:gravity="center|bottom"
            android:padding="20sp"
            android:text="@string/instructions"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/big_font"
            android:fontFamily="@font/roboto_bold" />

        <ImageView
            android:id="@+id/help_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:background="@android:drawable/ic_menu_close_clear_cancel" />
    </FrameLayout>

    <TextView
        android:id="@+id/help_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5sp"
        android:gravity="center|start"
        android:lineSpacingMultiplier="1.6"
        android:lineSpacingExtra="3sp"
        android:padding="@dimen/size_16sp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/medium_font"
        android:fontFamily="@font/roboto_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_5sp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cb_help_dont_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_help_dont_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dontshow"
            android:textColor="@color/colorBlack" />

    </LinearLayout>
</LinearLayout>