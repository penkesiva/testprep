<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/padding_8sp">

    <RelativeLayout
        android:id="@+id/question_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="@drawable/rectangle_blue"
        android:padding="@dimen/padding_8sp">

        <TextView
            android:id="@+id/q_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:scrollbars="vertical"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/big_font"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/q_no"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="@color/colorBlack"
            android:lineSpacingMultiplier="1.4"
            android:textSize="@dimen/medium_font"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_ques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:contentDescription="@string/question_image"
            android:maxWidth="250sp"
            android:maxHeight="250sp"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="gone"/>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_5sp"
        android:background="@drawable/rectangle_blue"
        android:padding="@dimen/padding_8sp">

        <RelativeLayout
            android:id="@+id/rg_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/padding_5sp"
                android:layout_marginRight="@dimen/padding_5sp"
                android:layout_centerVertical="true"
                android:text="@string/optionA"
                android:lineSpacingMultiplier="1.4"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/medium2_font"
                android:textStyle="bold"/>

            <CheckBox
                android:id="@+id/rb_optA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_a"
                android:background="@drawable/ripple"
                android:button="@null"
                android:drawableStart="@drawable/checkbox"
                android:text="@string/optionA"
                android:textSize="@dimen/medium_font"
                android:textAlignment="viewStart"
                android:textColor="#000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rg_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/padding_5sp"
                android:layout_marginRight="@dimen/padding_5sp"
                android:layout_centerVertical="true"
                android:text="@string/optionB"
                android:lineSpacingMultiplier="1.4"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/medium2_font"
                android:textStyle="bold"/>

            <CheckBox
                android:id="@+id/rb_optB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_b"
                android:background="@drawable/ripple"
                android:button="@null"
                android:drawableStart="@drawable/checkbox"
                android:text="@string/optionB"
                android:textSize="@dimen/medium_font"
                android:textAlignment="viewStart"
                android:textColor="#000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rg_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/padding_5sp"
                android:layout_marginRight="@dimen/padding_5sp"
                android:layout_centerVertical="true"
                android:text="@string/optionC"
                android:lineSpacingMultiplier="1.4"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/medium2_font"
                android:textStyle="bold"/>

            <CheckBox
                android:id="@+id/rb_optC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_c"
                android:background="@drawable/ripple"
                android:button="@null"
                android:drawableStart="@drawable/checkbox"
                android:text="@string/optionC"
                android:textSize="@dimen/medium_font"
                android:textAlignment="viewStart"
                android:textColor="#000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rg_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/padding_5sp"
                android:layout_marginRight="@dimen/padding_5sp"
                android:layout_centerVertical="true"
                android:text="@string/optionD"
                android:lineSpacingMultiplier="1.4"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/medium2_font"
                android:textStyle="bold"/>

            <CheckBox
                android:id="@+id/rb_optD"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_d"
                android:background="@drawable/ripple"
                android:button="@null"
                android:drawableStart="@drawable/checkbox"
                android:text="@string/optionD"
                android:textSize="@dimen/medium_font"
                android:textAlignment="viewStart"
                android:textColor="#000000"/>
        </RelativeLayout>
    </RadioGroup>
</LinearLayout>
