<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/score_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_green"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/your_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8sp"
            android:layout_marginStart="@dimen/padding_8sp"
            android:gravity="start"
            android:layout_weight="1"
            android:textSize="@dimen/big_font"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="@string/your_score" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/sample_score"
            android:textSize="@dimen/big_font"
            android:textColor="@color/colorGreen"
            android:textStyle="bold"/>

    </LinearLayout>

    <ListView
        android:id="@+id/results_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/score_layout"
        android:paddingTop="@dimen/padding_8sp"
        android:gravity="center"
        android:columnWidth="100dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="@dimen/padding_24sp"
        android:horizontalSpacing="10dp"
        android:stretchMode="spacingWidthUniform" />
</RelativeLayout>