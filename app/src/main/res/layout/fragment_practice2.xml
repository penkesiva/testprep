<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rsb="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/padding_8sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5sp"
        android:layout_marginTop="@dimen/padding_8sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/medium2_font"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:text="Apply Filters" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8sp"
        android:padding="@dimen/padding_5sp">

        <TextView
            android:id="@+id/tv_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Exam"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/medium2_font" />

        <ImageButton
            android:id="@+id/ib_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/sw_exam"
            android:layout_centerVertical="true"
            android:src="@android:drawable/arrow_down_float" />

        <Switch
            android:id="@+id/sw_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <GridView
        android:id="@+id/expanded_exam_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_8sp"
        android:gravity="center"
        android:columnWidth="100dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="@dimen/padding_16sp"
        android:stretchMode="spacingWidthUniform"
        android:visibility="gone">
    </GridView>

    <RelativeLayout
        android:id="@+id/subject_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8sp"
        android:gravity="center"
        android:padding="@dimen/padding_5sp">

        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Subject"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/medium2_font" />

        <ImageButton
            android:id="@+id/ib_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/sw_subject"
            android:layout_centerVertical="true"
            android:src="@android:drawable/arrow_down_float" />

        <Switch
            android:id="@+id/sw_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <GridView
        android:id="@+id/expanded_subject_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_8sp"
        android:gravity="center"
        android:columnWidth="100dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="@dimen/padding_16sp"
        android:stretchMode="spacingWidthUniform"
        android:visibility="gone">
    </GridView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5sp"
        android:layout_marginTop="@dimen/padding_8sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium2_font"
            android:textColor="@color/colorBlack"
            android:text="Year"/>

        <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
            android:id="@+id/rangeSeekbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5sp"
        android:layout_marginTop="@dimen/padding_8sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium2_font"
            android:textColor="@color/colorBlack"
            android:text="Difficulty"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/padding_8sp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_5sp"
                android:layout_marginEnd="@dimen/padding_5sp"
                android:text="EASY"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />

            <Button
                android:id="@+id/btn_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_5sp"
                android:layout_marginEnd="@dimen/padding_5sp"
                android:text="MEDIUM"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />

            <Button
                android:id="@+id/btn_hard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_5sp"
                android:layout_marginEnd="@dimen/padding_5sp"
                android:text="HARD"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />

            <Button
                android:id="@+id/btn_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_5sp"
                android:layout_marginEnd="@dimen/padding_5sp"
                android:text="ALL"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5sp"
        android:layout_marginTop="@dimen/padding_8sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium2_font"
            android:textColor="@color/colorBlack"
            android:text="Other"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_16sp"
            android:layout_marginTop="@dimen/padding_5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/medium_font"
                android:textColor="@color/colorBlack"
                android:text="Random" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_16sp"
            android:layout_marginTop="@dimen/padding_5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/medium_font"
                android:textColor="@color/colorBlack"
                android:text="To Review Later" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_8sp"
        android:padding="@dimen/padding_5sp"
        android:orientation="horizontal">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium2_font"
            android:text="Start"/>

    </LinearLayout>

</LinearLayout>

