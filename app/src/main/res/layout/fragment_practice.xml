<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:rsb="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_8sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_8sp"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Apply Filters"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/big_font"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_8sp"
            android:background="@drawable/rectangle_blue"
            android:padding="@dimen/padding_5sp">

            <RelativeLayout
                android:id="@+id/exam_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="@dimen/padding_5sp">

                <TextView
                    android:id="@+id/tv_exam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Exams"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/medium2_font"
                    android:textStyle="bold" />

                <!--ImageButton
                    android:id="@+id/ib_exam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/sw_exam"
                    android:src="@android:drawable/arrow_down_float" /-->

                <Switch
                    android:id="@+id/sw_exam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <ListView
                android:id="@+id/exam_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exam_layout"
                android:columnWidth="100dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:horizontalSpacing="@dimen/padding_8sp"
                android:verticalSpacing="@dimen/padding_8sp"
                android:numColumns="auto_fit"
                android:padding="@dimen/padding_2sp"
                android:stretchMode="spacingWidthUniform"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:visibility="visible">

            </ListView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_8sp"
            android:background="@drawable/rectangle_blue"
            android:padding="@dimen/padding_5sp">

            <RelativeLayout
                android:id="@+id/subject_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5sp">

                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Subjects"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/medium2_font"
                    android:textStyle="bold" />

                <!--ImageButton
                    android:id="@+id/ib_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/sw_subject"
                    android:src="@android:drawable/arrow_down_float" /-->

                <Switch
                    android:id="@+id/sw_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <ListView
                android:id="@+id/subject_list"
                android:layout_below="@+id/subject_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5sp"
                android:columnWidth="100dp"
                android:layout_centerInParent="true"
                android:horizontalSpacing="@dimen/padding_8sp"
                android:verticalSpacing="@dimen/padding_8sp"
                android:numColumns="auto_fit"
                android:padding="@dimen/padding_5sp"
                android:stretchMode="spacingWidthUniform"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:visibility="visible">
            </ListView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_8sp"
            android:background="@drawable/rectangle_blue"
            android:orientation="vertical"
            android:padding="@dimen/padding_8sp">

            <TextView
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:text="Year"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/medium2_font"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/year_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/year">

                <TextView
                    android:id="@+id/textMin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginStart="10dp"
                    android:textSize="16dp"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/textMax1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginEnd="10dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/year_text"
                android:padding="@dimen/padding_8sp">

                <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                    android:id="@+id/range_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_5sp"
                    app:corner_radius="5"
                    app:min_value="0"
                    app:max_value="100"
                    app:steps="1"
                    app:bar_color="@color/colorBackground"
                    app:bar_highlight_color="@color/colorBackground"
                    app:left_thumb_color="@color/colorLightGray3"
                    app:right_thumb_color="@color/colorLightGray3"
                    app:left_thumb_color_pressed="@color/colorGreen"
                    app:right_thumb_color_pressed="@color/colorGreen"
                    app:data_type="_integer"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/padding_8sp"
            android:background="@drawable/rectangle_blue"
            android:padding="@dimen/padding_8sp">

            <RelativeLayout
                android:id="@+id/difficulty_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="@dimen/padding_5sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Difficulty"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/medium2_font"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/sw_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/difficulty_layout"
                android:layout_marginTop="@dimen/padding_8sp"
                android:gravity="center_horizontal">

                <CheckBox
                    android:id="@+id/btn_easy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/padding_2sp"
                    android:layout_marginStart="@dimen/padding_2sp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="EASY" />

                <CheckBox
                    android:id="@+id/btn_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/padding_2sp"
                    android:layout_marginStart="@dimen/padding_2sp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="MEDIUM" />

                <CheckBox
                    android:id="@+id/btn_hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/padding_2sp"
                    android:layout_marginStart="@dimen/padding_2sp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="HARD" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_8sp"
            android:orientation="vertical"
            android:background="@drawable/rectangle_blue"
            android:padding="@dimen/padding_8sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Other"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/medium2_font"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Random"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/medium_font" />

                <CheckBox
                    android:id="@+id/cb_random"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="To Review Later"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/medium_font" />

                <CheckBox
                    android:id="@+id/cb_trl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Completed Questions"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/medium_font" />

                <CheckBox
                    android:id="@+id/cb_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_8sp"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5sp">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textSize="@dimen/medium2_font" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

