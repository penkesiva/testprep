<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/question_layout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="@drawable/rectangle"
        android:layout_above="@id/radioGroup1"
        android:layout_alignParentTop="true"
        android:padding="8dp">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="start"
            android:text="@string/question_header"
            android:scrollbars="vertical"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_ques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250sp"
            android:maxHeight="250sp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="gone"/>

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next_prev_buttons"
        android:background="@drawable/rectangle"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/rg_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="24sp"
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:gravity="center"
                android:layout_margin="5sp"
                android:text="A"/>

            <RadioButton
                android:id="@+id/rb_optA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_a"
                android:button="@null"
                android:drawableStart="@drawable/checkbox"
                android:text="A"
                android:textAlignment="viewStart"
                android:textColor="#000000" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rg_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="24sp"
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:gravity="center"
                android:layout_margin="5sp"
                android:text="B"/>

            <RadioButton
                android:id="@+id/rb_optB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_b"
                android:button="@null"
                android:drawableStart="@drawable/checkbox"
                android:text="B"
                android:textAlignment="viewStart"
                android:textColor="#000000" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rg_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="24sp"
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:gravity="center"
                android:layout_margin="5sp"
                android:text="C"/>

            <RadioButton
                android:id="@+id/rb_optC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_c"
                android:button="@null"
                android:drawableStart="@drawable/checkbox"
                android:text="C"
                android:textAlignment="viewStart"
                android:textColor="#000000" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rg_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="24sp"
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:gravity="center"
                android:layout_margin="5sp"
                android:text="D"/>

            <RadioButton
                android:id="@+id/rb_optD"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_d"
                android:button="@null"
                android:drawableStart="@drawable/checkbox"
                android:text="D"
                android:textAlignment="viewStart"
                android:textColor="#000000" />

        </RelativeLayout>

    </RadioGroup>

    <RelativeLayout
        android:id="@+id/next_prev_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp">

        <Button
            android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/rectangle"
            android:text="Previous"
            android:textColor="#46cf47"
            android:textSize="17sp" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/rectangle"
            android:text="Next"
            android:layout_alignParentRight="true"
            android:textColor="#46cf47"
            android:textSize="17sp" />
    </RelativeLayout>

</RelativeLayout>
