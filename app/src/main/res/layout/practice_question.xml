<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/question_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_blue"
        android:layout_above="@id/radioGroup1"
        android:padding="@dimen/padding_5sp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/q_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5sp"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="start"
                android:text="@string/question_header"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/big_font"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/question_image"
                android:background="@color/colorWhite"
                android:src="@drawable/ic_toggle"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/q_header"
            android:padding="@dimen/padding_5sp">

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_above="@id/iv_ques"
                android:layout_alignParentTop="true"
                android:text=""
                android:gravity="start"
                android:scrollbars="vertical"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="@dimen/medium_font" />

            <ImageView
                android:id="@+id/iv_ques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/question_image"
                android:maxWidth="250sp"
                android:maxHeight="250sp"
                android:layout_alignParentBottom="true"
                android:src="@android:drawable/btn_star_big_on"
                android:visibility="gone"/>

        </RelativeLayout>

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next_prev_buttons"
        android:background="@drawable/rectangle_blue"
        android:layout_marginTop="@dimen/padding_5sp"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/rg_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/big_font"
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:gravity="center"
                android:layout_marginLeft="@dimen/padding_5sp"
                android:layout_marginRight="@dimen/padding_5sp"
                android:text="@string/optionA"/>

            <CheckBox
                android:id="@+id/rb_optA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_a"
                android:button="@null"
                android:drawableStart="@drawable/checkbox"
                android:text="@string/optionA"
                android:textAlignment="viewStart"
                android:textColor="#000000" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rg_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/big_font"
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:gravity="center"
                android:layout_marginLeft="@dimen/padding_5sp"
                android:layout_marginRight="@dimen/padding_5sp"
                android:text="@string/optionB"/>

            <CheckBox
                android:id="@+id/rb_optB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_b"
                android:button="@null"
                android:drawableStart="@drawable/checkbox"
                android:text="@string/optionB"
                android:textAlignment="viewStart"
                android:textColor="#000000" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rg_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/big_font"
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:gravity="center"
                android:layout_marginLeft="@dimen/padding_5sp"
                android:layout_marginRight="@dimen/padding_5sp"
                android:text="@string/optionC"/>

            <CheckBox
                android:id="@+id/rb_optC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_c"
                android:button="@null"
                android:drawableStart="@drawable/checkbox"
                android:text="@string/optionC"
                android:textAlignment="viewStart"
                android:textColor="#000000" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rg_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/big_font"
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:gravity="center"
                android:layout_marginLeft="@dimen/padding_5sp"
                android:layout_marginRight="@dimen/padding_5sp"
                android:text="@string/optionD"/>

            <CheckBox
                android:id="@+id/rb_optD"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_d"
                android:button="@null"
                android:drawableStart="@drawable/checkbox"
                android:text="@string/optionD"
                android:textAlignment="viewStart"
                android:textColor="#000000" />

        </RelativeLayout>

    </RadioGroup>

    <RelativeLayout
        android:id="@+id/next_prev_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp">

        <Button
            android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/rectangle_blue"
            android:text="@string/previous"
            android:textColor="#46cf47"
            android:textSize="@dimen/medium_font" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/rectangle_blue"
            android:text="@string/next"
            android:layout_alignParentEnd="true"
            android:textColor="#46cf47"
            android:textSize="@dimen/medium_font" />
    </RelativeLayout>

</RelativeLayout>
